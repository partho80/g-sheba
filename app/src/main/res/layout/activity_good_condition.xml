<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".goodCondition">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/prt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:text="G_SHEBA PRESCRIPTION"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_margin = "10dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="3dp">
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:background="#00FFE1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_margin="15dp"
        android:src="@drawable/happy"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Hey!! You are in GOOD condition."
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:background="#00FFE1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Don't Be Panic.Stay calm.And Follow G_SHEBA TIPS."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_margin = "10dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="3dp">
        </LinearLayout>
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_margin="15dp"
            android:src="@drawable/smile"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/good_buttonId"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:text="G_SHEBA TIPS"
            android:backgroundTint="#F8385F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    </LinearLayout>

</ScrollView>