<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".result">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="10dp"
        android:text="G_SHEBA GASTRIC HEALTH REPORT"
        android:textSize="20sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="3dp">

        </LinearLayout>

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/report"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:background="#00FFE1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="To check your previous condition,you can only give your phone number"
            android:textColor="@color/black"
            android:layout_margin="20dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <EditText
        android:id="@+id/resultEditText1"
        android:hint="Patient_Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FFEB3B"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_margin = "10dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp">

    </LinearLayout>
    <EditText
        android:id="@+id/resultEditText2"
        android:hint="Patient_Age"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FFEB3B"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_margin = "10dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp">

    </LinearLayout>
    <EditText
        android:id="@+id/resultEditText3"
        android:hint="Patient_Phone_No"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FFEB3B"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_margin = "10dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp">

    </LinearLayout>
    <EditText
        android:id="@+id/resultEditText4"
        android:hint="Patient_Email"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FFEB3B"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_margin = "10dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp">

    </LinearLayout>
    <EditText
        android:id="@+id/resultEditText5"
        android:hint="Date(: 2June,2021)"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FFEB3B"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_margin = "10dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp">

    </LinearLayout>
    <Button
        android:layout_gravity="center_horizontal"
        android:text="SAVE_YOUR DATA"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/resultButton1"
        android:backgroundTint="#F8385F"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="GET_Your Report"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/resultButton2"
        android:backgroundTint="#F8385F"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="GET_YOUR Prescription"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/resultButton3"
        android:backgroundTint="#F8385F"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>