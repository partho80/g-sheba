<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".HomePage">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome To G_SHEBA"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
        />
     <LinearLayout
         android:layout_marginLeft="30dp"
         android:layout_marginRight="30dp"
         android:background="@color/black"
         android:layout_width="match_parent"
         android:layout_height="3dp">

     </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:src="@drawable/welcom"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/r"
            android:layout_marginLeft="10dp"

            />
    </LinearLayout>
        </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="How CAN G_SHEBA HELP YOU?"
        android:textSize="22dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        />
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="3dp">

        </LinearLayout>
        <LinearLayout
        android:layout_margin="10dp"
        android:background="#00FFE1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/homePageButtonId1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/white"
        android:text="G_SHEBA TIPS"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        />
    </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="3dp">

        </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:background="#FFBE3B"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/checkup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/homePageButtonId2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/white"
        android:text="Check Your Gastric Health condition"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17sp"
        />
    </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="3dp">

        </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:background="#03A9F4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/homePageButtonId3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/white"
        android:text="Find Your Doctor"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        />
    </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="3dp">

        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:background="#FF0026"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/homePageButtonId4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/white"
                android:text="Find Your appointment"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="3dp">

        </LinearLayout>
    </LinearLayout>

</ScrollView>