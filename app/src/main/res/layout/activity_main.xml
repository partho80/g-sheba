<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="G_SHEBA"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="3dp">
    </LinearLayout>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/stmc"
        android:layout_gravity="center_horizontal"

        />
    <LinearLayout
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="3dp">
    </LinearLayout>


    <EditText
        android:id="@+id/signInEmailID"
        android:layout_marginTop="20dp"
        android:hint="Enter_mail"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FFEB3B"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_margin = "10dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp">
    </LinearLayout>


    <EditText
        android:id="@+id/signInPasswordID"
        android:hint="Enter_Password"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FFEB3B"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_margin = "10dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp">
    </LinearLayout>
    <Button
        android:id="@+id/signInButtonId"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#F8385F"
        android:layout_gravity="center_horizontal"
        android:text="Sign In"
        android:textSize="20sp"
        android:textColor="@color/black"

        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#00FFE1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/signInTextId"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Don't you have any account? Click Here For SignUP."
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center_horizontal"

        />
</LinearLayout>



</LinearLayout>